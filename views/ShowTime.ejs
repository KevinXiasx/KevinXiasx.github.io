	<script type="text/javascript">
		var textline = "<p>hello</P>";
		document.body.appendChild(textline);

	</script>

	<script type="text/javascript">
		function buttonclick () {
			var newcolor;
			var object=event.srcElement;
			if( object.value == document.getElementById('headbutton3_id').value )
				newcolor = "#CD00CD";
			else if( object.value == document.getElementById('headbutton1_id').value)
				newcolor = "#A4D3EE";
			else if(object.value == document.getElementById('headbutton2_id').value)
				newcolor = "#00EE00";
			document.getElementById('bodyid').style.backgroundColor= newcolor;
		}
		var allbutton = document.querySelectorAll('input');
		for (var i = 0; i< allbutton.length; i++) {
			allbutton[i].onclick = buttonclick;
		};
	</script>
