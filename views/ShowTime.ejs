	<div class="div_menu_class" >
		<div class="div_menu_1_class" align="right"><input id="headbutton1_id" type="button"  value="Learning English" /></div>
		<div class="div_menu_2_class" align="center"><input id="headbutton2_id" type="button" value="Photo Show" /></div>
